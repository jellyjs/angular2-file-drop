{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "outDir": "build",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false
  },
  "include": [
    "./src/**/*",
    "./ambient.d.ts"
  ],
  "exclude": [
    "build",
    "node_modules"
  ]
}
